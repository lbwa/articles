{
  "name": "articles",
  "version": "1.0.0",
  "description": "My personal articles repository",
  "main": "index.js",
  "repository": "git@github.com:lbwa/articles.git",
  "author": "Bowen <mr_lbw@outlook.com>",
  "license": "CC BY-NC-SA 3.0",
  "private": true,
  "scripts": {
    "ts": "npx tsc",
    "server": "node dist/index",
    "dev": "yarn run ts && pm2 start pm2.config.js",
    "restart": "yarn run ts && pm2 restart pm2.config.js --update-env",
    "delete": "pm2 delete blog-api",
    "compiler": "yarn run ts && node dist/index skip",
    "start": "yarn run server",
    "commit": "sh scripts/commit.sh",
    "now": "sh scripts/prod.sh",
    "clean": "rm -vrf dist/*"
  },
  "dependencies": {
    "front-matter": "^2.3.0",
    "glob": "^7.1.2",
    "koa": "^2.5.2",
    "koa-compress": "^3.0.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0"
  },
  "devDependencies": {
    "@types/koa": "^2.0.46",
    "@types/koa-compress": "^2.0.8",
    "@types/koa-router": "^7.0.30",
    "@types/koa-send": "^4.1.1",
    "@types/node": "^10.5.2",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "typescript": "^2.9.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
